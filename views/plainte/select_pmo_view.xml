<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="select_pmo_form_view" model="ir.ui.view">
        <field name="name">plainte.pmo.form.view</field>
        <field name="model">mgp.plainte</field>
        <field name="arch" type="xml">
        <form edit="true" create="false" delete="false">
            <sheet>
                <group>
                    <field name="user_pmo_id" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"
                       widget="many2one"/>
                </group>
                <footer>
                    <button name="action_send_to_pmo" string="Assigner" type="object" default_focus="1" class="oe_highlight" />
                    <button string="Annuler" class="oe_link" special="cancel" />
                </footer>
            </sheet>
        </form>
        </field>
    </record>

    <record id="select_pmo_action_window" model="ir.actions.act_window">
        <field name="name">Selectionner un PMO</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mgp.plainte</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="select_pmo_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>
