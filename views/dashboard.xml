    <record id="act_plainte_list" model="ir.actions.act_window">
        <field name="name">Plaintes</field>
        <field name="res_model">mgp.plainte</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="plainte_dashboard_form_view" model="ir.ui.view">
        <field name="name">Dashboard Form</field>
        <field name="model">mgp.plainte</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <board style="1-2">
                    <column>
                        <action string="Plaintes" name="%(act_plainte_list)d" />
                    </column>
                </board>
            </form>
        </field>
    </record>

    <record id="plainte_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">mgp.plainte</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="plainte_dashboard_form_view"/>
    </record>

    <menuitem
        name="Dashboard"
        parent="plainte_sub_menu"
        action="plainte_dashboard"
        sequence="10"
        id="menu_dashboard"/>

</odoo>